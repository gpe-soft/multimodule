<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="multimodule">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>nl.gpesoft.persistence.AddressJPA</class>
        <class>nl.gpesoft.persistence.EmployeeJPA</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="sampleCreate.ddl"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="sampleDrop.ddl"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./mulitmoduleDB;create=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <!--<property name="javax.persistence.sql-load-script-source" value="insert.sql"/>-->
        </properties>
    </persistence-unit>

</persistence>
